+                           const VkSwapchainCreateInfoKHR *pCreateInfo,
+                           const struct wsi_drm_image_params *params,
+                           struct wsi_image_info *info)
+{
+      assert(params->base.image_type == WSI_IMAGE_TYPE_DRM);
